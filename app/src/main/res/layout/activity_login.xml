<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">


    <RelativeLayout
        android:id="@+id/atas"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/main_color">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Welcome To"
            android:textSize="35dp"

            android:textColor="@color/white"
            android:fontFamily="sans-serif-condensed"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/zap"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"

            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bawah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_below="@id/atas">


        <RelativeLayout
            android:id="@+id/username_n_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp">

            <EditText
                android:id="@+id/email_lgn"
                android:layout_width="298dp"
                android:layout_height="37dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/border1"
                android:textAppearance="?android:textAppearanceSmall"
                android:padding="11dp"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="12dp"
                android:inputType="textEmailAddress"
                android:hint="Email"
                tools:layout_editor_absoluteY="279dp" />

            <EditText
                android:id="@+id/password_lgn"
                android:layout_width="298dp"
                android:layout_height="37dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/email_lgn"
                android:background="@drawable/border1"
                android:textAppearance="?android:textAppearanceSmall"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="11dp" />

            <TextView
                android:id="@+id/forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/password_lgn"
                android:text="Forgot Password?"
                android:layout_marginTop="10dp"
                android:textColor="#3C82FF"
                android:clickable="true"
                android:layout_alignLeft="@id/password_lgn"/>


        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/layout_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="218dp">

                <Button
                    android:id="@+id/login"
                    android:layout_width="266dp"
                    android:layout_height="41dp"
                    android:layout_centerHorizontal="true"
                    android:background="@color/main_color"
                    android:text="Log in"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_signup"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:id="@+id/tdk_pnya_acc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dont have an account?" />

                <TextView
                    android:id="@+id/sign_up_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tdk_pnya_acc"
                    android:text="  Sign Up"
                    android:textColor="#3C82FF" />
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>