<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_addGambar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:clickable="true">

        <ImageView
            android:id="@+id/img_barang"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"

            android:src="@drawable/ic_add_a_photo_black_24dp" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/form1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_addGambar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <EditText
            android:id="@+id/addnama_produk"
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:hint="Masukan Nama Produk"
            android:padding="10dp"
            android:background="@drawable/border2"
            android:paddingLeft="12dp"
            android:textColor="#2C93EE"
            android:textSize="13dp" />

        <EditText
            android:id="@+id/add_harga"
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/addnama_produk"
            android:layout_marginTop="20dp"
            android:hint="Masukan Harga Produk"
            android:paddingLeft="12dp"
            android:padding="10dp"
            android:background="@drawable/border2"
            android:textColor="#2C93EE"
            android:textSize="13dp" />

        <EditText
            android:id="@+id/add_seller"
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_harga"
            android:layout_marginTop="20dp"
            android:hint="Masukan Pedagang"
            android:padding="10dp"
            android:background="@drawable/border2"
            android:textColor="#2C93EE"
            android:paddingLeft="12dp"
            android:textSize="13dp" />


    </RelativeLayout>


    <Button
        android:id="@+id/btn_add"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/form1"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_margin="20sp"
        android:background="#2C93EE"
        android:text="Add Item"
        android:textColor="@color/white" />





</RelativeLayout>